{
    // .NET/C# Dev Kit settings
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.codeLens.enableReferencesCodeLens": true,
    "dotnet.projects.enableAutomaticRestore": true,
    // .NET Unit Testing
    "dotnet.server.waitForDebugger": false,
    "dotnet.unitTests.runSettingsPath": "${workspaceFolder}/.runsettings",
    // Godot integration
    "godotTools.editorPath.godot4": "godot",
    "godotTools.lsp.serverPort": 6005,
    // Editor behavior - universal
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit",
    },
    "editor.renderWhitespace": "trailing",
    "editor.renderControlCharacters": true,
    // File handling
    "files.eol": "\n",
    "files.insertFinalNewline": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "project.godot": true,
        "**/*.uid": true,
        "**/*.import": true,
        "**/.godot": true,
        "**/addons": true,
        "**/gdunit4_testadapter": true,
    },
}
