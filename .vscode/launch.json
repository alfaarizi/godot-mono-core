    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-without-tests",
            "program": "godot",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current Scene",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-without-tests",
            "program": "godot",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.tscn"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "--settings",
                ".runsettings"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current Test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "--settings",
                ".runsettings",
                "--filter",
                "DisplayName~${fileBasenameNoExtension}"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Process",
            "type": "coreclr",
            "request": "attach",
        }
        // gdunit4
        // godot --path . -s -d res://addons/gdUnit4/bin/GdUnitCmdTool.gd -a tests/
    ]
}